#!/bin/bash
. "$(dirname "$0")/lib"

# redirect stdout to stderr,
# because we want to print only ${version}s to stdout
exec 3>&1
exec 1>&2

read -r release

# go to project directory
cd "$(git rev-parse --show-toplevel)"

# delete files we don't want to commit
find . \
	-mindepth 1 \
	-maxdepth 1 \
	   -path './.git' -prune \
	-o -path './Dockerfile' -prune \
	-o -path './docker-compose.test.yml' -prune \
	-o -path './test' -prune \
	-o -path './LICENSE' -prune \
	-o -path './README.md' -prune \
	-o -exec rm -rf {} +

# set $release
sed -i "s/ARG RELEASE/ENV RELEASE \"$release\"/" 'Dockerfile'

echo "$release" 1>&3

# restore original stdout
exec 1>&3
exec 3>&-
